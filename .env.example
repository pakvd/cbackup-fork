# cBackup Environment Variables
# Copy this file to .env and update with your secure passwords

# MySQL Database Configuration
MYSQL_DATABASE=cbackup
MYSQL_USER=cbackup
MYSQL_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MYSQL_ROOT_PASSWORD=CHANGE_ME_STRONG_ROOT_PASSWORD
MYSQL_PORT=3306

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD

# Nginx Configuration
NGINX_PORT=8080
NGINX_SSL_PORT=443

# PHP Configuration
PHP_TIMEZONE=UTC
ENABLE_OPCACHE=true
YII_DEBUG=false
YII_ENV=prod

# Java Worker Configuration
JAVA_OPTS=-Xmx512m -Xms256m
